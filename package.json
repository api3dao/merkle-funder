{
  "name": "@api3/merkle-funder",
  "version": "0.4.0",
  "license": "MIT",
  "private": false,
  "main": "dist/src/index",
  "files": [
    "contracts",
    "dist/src",
    "dist/deployments",
    "deployments/references.json",
    "deployments/deployment-block-numbers.json"
  ],
  "scripts": {
    "build": "yarn clean && hardhat compile --force && tsc",
    "clean": "rimraf dist .esbuild .serverless artifacts cache coverage typechain-types",
    "deploy:merkle-funder": "DETERMINISTIC=true hardhat deploy --network $NETWORK",
    "deploy:merkle-funder-depositories": "hardhat run ./scripts/deploy-merkle-funder-depositories.ts --network $NETWORK",
    "deploy:watch": "hardhat deploy --watch --network",
    "env-example:write": "ts-node scripts/write-env-example-file.ts",
    "fund:merkle-funder-depositories": "hardhat run ./scripts/fund-merkle-funder-depositories.ts --network $NETWORK",
    "fund": "hardhat run ./scripts/fund.ts --network $NETWORK",
    "hh:node": "hardhat node",
    "hh:deploy": "hardhat deploy",
    "lint": "yarn run prettier:check && yarn run lint:eslint && yarn run lint:solhint",
    "lint:solhint": "solhint ./contracts/**/*.sol",
    "lint:eslint": "eslint . --ext .js,.ts",
    "prettier:check": "prettier --check \"./**/*.{js,ts,md,json,sol}\"",
    "prettier": "prettier --write \"./**/*.{js,ts,md,json,sol}\"",
    "prepare": "husky install",
    "sls:config": "sls config credentials --provider aws --key $AWS_ACCESS_KEY_ID --secret $AWS_SECRET_ACCESS_KEY",
    "sls:deploy": "ts-node scripts/load-config.ts && sls deploy",
    "sls:remove": "sls remove",
    "sls:local": "sls offline",
    "sls:invoke:fundHandler": "sls invoke local -f fundHandler",
    "test": "yarn test:unit && yarn test:contracts",
    "test:contracts": "hardhat test --parallel",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@api3/chains": "^3.3.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/aws-lambda": "^8.10.119",
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.197",
    "@types/mocha": ">=10.0.1",
    "@types/node": ">=18.17.5",
    "@types/serverless": "^3.12.14",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-plugin-jest": "^27.2.3",
    "hardhat": "2.17.1",
    "hardhat-deploy": "^0.11.36",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-prettier": "^0.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "serverless": "^3.34.0",
    "serverless-esbuild": "^1.46.0",
    "serverless-offline": "^12.0.4",
    "solhint": "^3.6.1",
    "solidity-coverage": "^0.8.4",
    "ts-jest": "^29.1.1",
    "ts-node": ">=10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@api3/airnode-protocol-v1": "^2.8.0",
    "@api3/airnode-utilities": "^0.12.0",
    "@api3/airnode-validator": "^0.12.0",
    "@api3/promise-utils": "^0.4.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@openzeppelin/merkle-tree": "^1.0.5",
    "ethers": "^5.7.2",
    "lodash": "^4.17.21",
    "zod": "^3.21.4"
  }
}
